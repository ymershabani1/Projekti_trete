<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_layout_container"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:background="@drawable/rounded_dialog_background_pink"
        android:layout_margin="5dp"

        >

        <ImageView
            android:id="@+id/ivSad"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/cry"
            />
        <TextView
            android:id="@+id/tvSWW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Something went wrong!"
            android:textSize="30sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_below="@id/ivSad"

            />

        <TextView
            android:id="@+id/tvChoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="choose an action"
            android:textSize="15sp"
            android:layout_below="@id/tvSWW"
            android:textColor="@color/colorBlack"
            >
        </TextView>

        <Button
            android:id="@+id/btnTryAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Try again"
            android:textSize="25sp"
            android:layout_below="@id/tvChoose"

            android:background="@drawable/rounded_button_background_skin">

        </Button>
        <Button
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="UPDATE"
            android:textSize="25sp"
            android:layout_below="@id/btnTryAgain"
            android:background="@drawable/rounded_button_background_lightyellow">

        </Button>





    </RelativeLayout>

</RelativeLayout>
